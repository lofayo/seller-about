border_bottom1px()
  border-bottom: 1px solid #ECECEC

bg_dpr(bg)
  background: url(bg +'.png') no-repeat center / 100% 100%
  @media (-webkit-min-device-pixel-ratio: 2) {
    background-image:url(bg +'@2x.png');
  }
  @media (-webkit-min-device-pixel-ratio: 3) {
    background-image:url(bg +'@3x.png');
  }
  
bg_dpr_jpg(bg)
  background: url(bg +'.jpg') no-repeat center / 100% 100%
  @media (-webkit-min-device-pixel-ratio: 2) {
    background-image:url(bg +'@2x.jpg');
  }
  @media (-webkit-min-device-pixel-ratio: 3) {
    background-image:url(bg +'@3x.jpg');
  }
  
  // 有时候需要设置背景图片的100%，但是有时候因为此设置会让图片变形，所以加入contain
bg_dpr_contain(bg)
  background: url(bg +'.png') no-repeat center / contain
  @media (-webkit-min-device-pixel-ratio: 2) {
    background-image:url(bg +'@2x.png');
  }
  @media (-webkit-min-device-pixel-ratio: 3) {
    background-image:url(bg +'@3x.png');
  }
  

bg(bg)
  background: url(bg +'.png') no-repeat center / 100% 100%
  

